<section class="hero is-fullheight is-light">
    <div class="hero-body">
        <div class="container ">
            <div class="column is-4 is-offset-4">
                <h3 class="title has-text-centered">Signup</h3>
                <div class="box">

                    <form action="/signup" method="post">
                        <div class="field">
                            <div class="control">
                                <label class="label" for="firstname">Fornavn</label>
                                <input class="input" type="text" placeholder="Your firstname" autofocus=""
                                    name="firstname" id="firstname">
                            </div>
                        </div>

                        <div class="field">
                            <div class="control">
                                <label class="label" for="lastname">Lastname</label>
                                <input class="input" type="text" placeholder="Your lastname" autofocus=""
